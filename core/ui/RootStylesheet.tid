title: $:/core/ui/RootStylesheet
code-body: yes

\import [subfilter{$:/core/config/GlobalImportFilter}]
\whitespace trim

<$let currentTiddler" value={{$:/language}} languageTitle={{!!name}}>

	<$list filter="[all[shadows+tiddlers]tag[$:/tags/Stylesheet]!is[draft]]">

		<style type="text/css">

			<$view format={{{ [<currentTiddler>tag[$:/tags/Stylesheet/Static]then[text]else[plainwikified]] }}}/>

		</style>

	</$list>

</$let>
